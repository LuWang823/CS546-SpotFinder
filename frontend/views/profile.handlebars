<main>
    <h2 id="user-name"></h2>
    <h4 id="user-email"></h4>
    <span>Verified: {{verified}}</span>

    <h3>Posted Spots</h3>
    <ul class="spot-list">
        <!--array of spot IDs-->
        {{#each spots}}
        <li><a href="/spots/{{this}}">{{this}}</a></li> <button onclick="deleteSpot({{this}})">Delete Spot</button> <a href='/spots/{{this}}/update'><button>Update Spot</button></a>
        {{/each}}
    </ul>

    <h3>Liked Spots</h3>
    <ul class="spot-list">
        <!--array of spot IDs-->
        {{#each likedSpots}}
        <li><a href="/spots/{{this}}">{{this}}</a></li>
        {{/each}}
    </ul>

</main>
